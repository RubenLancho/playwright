{
  "name": "playwright-testing-project",
  "version": "1.0.0",
  "description": "A project for testing web applications using Playwright.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "build": "tsc",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "test:coverage": "nyc --reporter=lcov --reporter=text npx playwright test"
  },
  "keywords": [
    "playwright",
    "testing",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.0.0",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true
  }
}
